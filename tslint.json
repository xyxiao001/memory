{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "ordered-imports": false,
    "jsx-boolean-value": false,
    "semicolon": [true, "always"],
    "quotemark": [true, "single", "jsx-double"],
    "no-empty-interface": [false],
    "no-console": [false]
  }
}